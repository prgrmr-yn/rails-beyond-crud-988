<div id="<%= dom_id restaurant %>">
  <p>
    <strong>Name:</strong>
    <%= restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= restaurant.address %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= restaurant.rating %>
  </p>

</div>
<p><strong>Reviews</strong></p>
<%= link_to 'Add a new review',  new_restaurant_review_path(restaurant)%>
<hr>
<ul class="list-group">
  <% restaurant.reviews.each do |review| %>
    <li>
    <%= review.content %>
    <%= link_to 'Edit', edit_review_path(review) %>
    <%= link_to 'Delete',
         review_path(review),
         data: {turbo_method: :delete,
                turbo_confirm: 'You sure mate?'} %>
    </li>

    <hr>
  <% end %>
</ul>
<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %> |
  <%= link_to 'See chef', chef_restaurant_path(restaurant) %>
  <%= button_to "Destroy this restaurant", restaurant, method: :delete %>
</div>
